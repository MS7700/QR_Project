@model QR_Project_5.Models.RespuestaClienteQuejaViewModel
@using QR_Project_5.Models
@{
    ViewBag.Title = "CreateFromQueja";
}

<h2>CreateFromQueja</h2>

@Html.Partial("_DetailsQueja", Model.QuejaViewModel)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    @Html.HiddenFor(model => model.QuejaViewModel.Queja.ID_Queja)
    @Html.HiddenFor(model => model.Respuesta_Cliente.ID_Estado_Origen)

    <div class="form-group">
        @Html.LabelFor(model => model.Respuesta_Cliente.ID_Estado_Destino, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Respuesta_Cliente.ID_Estado_Destino, (SelectList)ViewBag.ID_Estado_Destino, null, new { @class = "form-control" })
            @*@Html.DropDownList("ID_Estado_Destino", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.Respuesta_Cliente.ID_Estado_Destino, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Respuesta_Cliente.Valoracion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Respuesta_Cliente.Valoracion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Respuesta_Cliente.Valoracion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Respuesta_Cliente.Detalle, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Respuesta_Cliente.Detalle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Respuesta_Cliente.Detalle, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Agregar" class="btn btn-success" />
        </div>
    </div>
</div>
}
<script>
    function disableValues() {
        var select = document.getElementById("Respuesta_Cliente_ID_Estado_Destino").getElementsByTagName("option");

        for (var i = 0; i < select.length; i++) {
            if (select[i].value != "@Estado_QR.GetIdByDescripcion(Estado_QR.REABIERTO_DISCONFORMIDAD)" && select[i].value != "@Estado_QR.GetIdByDescripcion(Estado_QR.CERRADO)") {
                select[i].disabled = true;
                select[i].style.color = "#f7e7e7";
            }
        }
    }

    function onLoad() {
        disableValues();
    }

    window.addEventListener('load', onLoad);
</script>
@model QR_Project_5.Models.RespuestaEmpleadoReclamacionViewModel
@using QR_Project_5.Models
@{
    ViewBag.Title = "CreateFromReclamacion";
}

<h2>CreateFromQueja</h2>

@Html.Partial("_DetailsReclamacion", Model.ReclamacionViewModel)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

  

    @Html.HiddenFor(model => model.ReclamacionViewModel.Reclamacion.ID_Reclamacion)
    @Html.HiddenFor(model => model.Respuesta_Empleado.ID_Sucursal_Origen)
    @Html.HiddenFor(model => model.Respuesta_Empleado.ID_Estado_Origen)
    @Html.HiddenFor(model => model.Respuesta_Empleado.ID_Departamento_Origen)
    @Html.HiddenFor(model => model.Respuesta_Empleado.ID_Empleado_Origen)

    <div class="form-group">
        @Html.LabelFor(model => model.Respuesta_Empleado.ID_Estado_Destino, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Respuesta_Empleado.ID_Estado_Destino, (SelectList)ViewBag.ID_Estado_Destino, null, new { @class = "form-control", onChange = "onSelect(this.value)" })
            @*@Html.DropDownList("ID_Estado_Destino", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.Respuesta_Empleado.ID_Estado_Destino, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group" id="ID_EMPLEADO_FORM">
        @Html.LabelFor(model => model.Respuesta_Empleado.ID_Empleado_Destino, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Respuesta_Empleado.ID_Empleado_Destino, (SelectList)ViewBag.ID_Empleado_Destino, "Seleccione", new { @class = "form-control" })
            @*@Html.DropDownListFor("ID_Empleado_Destino", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.Respuesta_Empleado.ID_Empleado_Destino, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group" id="ID_DEPARTAMENTO_FORM">
        @Html.LabelFor(model => model.Respuesta_Empleado.ID_Departamento_Destino, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Respuesta_Empleado.ID_Departamento_Destino, (SelectList)ViewBag.ID_Departamento_Destino, "Seleccione", new { @class = "form-control" })
            @* @Html.DropDownList("ID_Departamento_Destino", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.Respuesta_Empleado.ID_Departamento_Destino, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" id="ID_SUCURSAL_FORM">
        @Html.LabelFor(model => model.Respuesta_Empleado.ID_Sucursal_Destino, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Respuesta_Empleado.ID_Sucursal_Destino, (SelectList)ViewBag.ID_Sucursal_Destino, "Seleccione", new { @class = "form-control" })
            @*@Html.DropDownList("ID_Sucursal_Destino", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.Respuesta_Empleado.ID_Sucursal_Destino, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        @Html.LabelFor(model => model.Respuesta_Empleado.Detalle, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Respuesta_Empleado.Detalle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Respuesta_Empleado.Detalle, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Agregar" class="btn btn-success" />
        </div>
    </div>
</div>
}<script>
    function disableValues() {
        var select = document.getElementById("Respuesta_Empleado_ID_Estado_Destino").getElementsByTagName("option");
        
        for (var i = 0; i < select.length; i++) {
            if (select[i].value == "@Estado_QR.GetIdByDescripcion(Estado_QR.REABIERTO_DISCONFORMIDAD)") {
                select[i].disabled = true;
                select[i].style.color = "#f7e7e7";
            } else if (select[i].value == "@Estado_QR.GetIdByDescripcion(Estado_QR.ABIERTO)") {
                select[i].disabled = true;
                select[i].style.color = "#f7e7e7";
            }
        }
    }

    function onLoad() {
        disableValues();
        var value = document.getElementById("Respuesta_Empleado_ID_Estado_Destino").value;
        onSelect(value);
    }


    function onSelect(value) {
        switch (value) {
            case "@Estado_QR.GetIdByDescripcion(Estado_QR.REDIRIGIDO_DEPARTAMENTO)":
                
                document.getElementById("ID_EMPLEADO_FORM").style.display = "none";
                document.getElementById("ID_SUCURSAL_FORM").style.display = "none";
                document.getElementById("ID_DEPARTAMENTO_FORM").style.display = "block";
                
                break;
            case "@Estado_QR.GetIdByDescripcion(Estado_QR.CERRADO)":
                document.getElementById("ID_EMPLEADO_FORM").style.display = "none";
                document.getElementById("ID_SUCURSAL_FORM").style.display = "none";
                document.getElementById("ID_DEPARTAMENTO_FORM").style.display = "none";
                break;
            case "@Estado_QR.GetIdByDescripcion(Estado_QR.REDIRIGIDO_EMPLEADO)":
                
                document.getElementById("ID_EMPLEADO_FORM").style.display = "block";
                document.getElementById("ID_SUCURSAL_FORM").style.display = "none";
                document.getElementById("ID_DEPARTAMENTO_FORM").style.display = "none";
                break;
            case "@Estado_QR.GetIdByDescripcion(Estado_QR.REDIRIGIDO_SUCURSAL)":
                document.getElementById("ID_EMPLEADO_FORM").style.display = "none";
                document.getElementById("ID_SUCURSAL_FORM").style.display = "block";
                document.getElementById("ID_DEPARTAMENTO_FORM").style.display = "block";
                break;
            case "@Estado_QR.GetIdByDescripcion(Estado_QR.PENDIENTE_VALORACION)":
                document.getElementById("ID_EMPLEADO_FORM").style.display = "none";
                document.getElementById("ID_SUCURSAL_FORM").style.display = "none";
                document.getElementById("ID_DEPARTAMENTO_FORM").style.display = "none";
                break;
            default:
                document.getElementById("ID_EMPLEADO_FORM").style.display = "none";
                document.getElementById("ID_SUCURSAL_FORM").style.display = "none";
                document.getElementById("ID_DEPARTAMENTO_FORM").style.display = "none";

       }
    }
    window.addEventListener('load', onLoad);
</script>